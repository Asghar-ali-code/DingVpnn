<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    tools:context=".Activities.SettingLangActivity">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oxygen_regular"
        android:textColor="@color/white"
        android:text="Settings"
        android:layout_margin="@dimen/_12sdp"
        android:gravity="center"
        android:textSize="16sp"
        android:drawablePadding="@dimen/_12sdp"
        android:drawableStart="@drawable/back_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:id="@+id/Rl_language"
        app:layout_constraintTop_toBottomOf="@id/back">

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="10dp"
            android:src="@drawable/language_icon"
            android:layout_centerVertical="true"
            app:tint="@color/white"
            android:id="@+id/ivlanguage" />

        <TextView
            android:id="@+id/tvlanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/ivlanguage"
            android:fontFamily="@font/oxygen_regular"
            android:text="Language"
            android:textColor="@color/white"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivlanguage"
            android:layout_below="@id/tvlanguage"
            android:layout_marginStart="10dp"
            android:text="English"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:fontFamily="@font/oxygen_regular"
            android:id="@+id/tvlanguagedetails" />

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/forward_icon" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:id="@+id/Rl_DisableTime"
        app:layout_constraintTop_toBottomOf="@id/Rl_language">

        <ImageView
            android:id="@+id/ivDisableTimeOut"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/disable_icon"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tvDisableTimeOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/ivDisableTimeOut"
            android:fontFamily="@font/oxygen_regular"
            android:text="Disable TimeOut"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDisableTimeOut"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/ivDisableTimeOut"
            android:fontFamily="@font/oxygen_regular"
            android:text="English"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/forward_icon" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:id="@+id/Rl_about"
        app:layout_constraintTop_toBottomOf="@id/Rl_DisableTime">

        <ImageView
            android:id="@+id/ivabout"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/about_icon"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tvabout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/ivabout"
           android:layout_centerInParent="true"
            android:fontFamily="@font/oxygen_regular"
            android:text="Disable TimeOut"
            android:textColor="@color/white"
            android:textSize="14sp" />



        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/forward_icon" />


    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>