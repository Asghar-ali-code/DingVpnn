<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/serverbackground">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSelectLang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:fontFamily="@font/oxygen_regular"
        android:text="Please Select Language"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:textSize="@dimen/_18sdp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"/>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:background="@color/white"
        android:layout_marginTop="@dimen/_12sdp"
        app:layout_constraintTop_toBottomOf="@id/tvSelectLang"
        />
    <RadioGroup
        android:layout_width="@dimen/_230sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:theme="@style/RadioButtonStyle"
        app:layout_constraintTop_toBottomOf="@id/view">
    <androidx.appcompat.widget.AppCompatRadioButton
        android:id="@+id/english"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="English"
        android:padding="@dimen/_12sdp"
        android:textColor="@drawable/radio_button"
        android:layoutDirection="rtl"
        android:textAlignment="textStart"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/_12sdp"
        android:buttonTint="@drawable/radio_button"


/>
        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/arabic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arabic"
            android:padding="@dimen/_12sdp"
            android:textColor="@drawable/radio_button"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_12sdp"
            android:buttonTint="@drawable/radio_button"
            />
        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/russian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Russian"
            android:padding="@dimen/_12sdp"
            android:textColor="@drawable/radio_button"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_12sdp"
            android:buttonTint="@drawable/radio_button"
            />
        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/hindi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hindi"
            android:padding="@dimen/_12sdp"
            android:textColor="@drawable/radio_button"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_12sdp"
            android:buttonTint="@drawable/radio_button"
            />
        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/korean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Korean"
            android:padding="@dimen/_12sdp"
            android:textColor="@drawable/radio_button"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_12sdp"
            android:buttonTint="@drawable/radio_button"
            />
        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/italian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Italian"
            android:padding="@dimen/_12sdp"
            android:textColor="@drawable/radio_button"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_12sdp"

            android:buttonTint="@drawable/radio_button"
            />
        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/indonseian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Indonseian"
            android:padding="@dimen/_12sdp"
            android:textColor="@drawable/radio_button"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_12sdp"
            android:buttonTint="@drawable/radio_button"
            />


    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>